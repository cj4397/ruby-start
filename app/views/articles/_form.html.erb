
<div class="container is-flex is-justify-content-center has-text-centered">
<%= form_with model: @article do |f| %>

<p>
<% if @article.errors.any? %>
<ul>
<% @article.errors.full_messages.each do |message| %>
    <li><% message %></li>
    <% end %>
</ul>
<% end %>
</p>


 <p class="field">
    <%= f.label :author, class:'label'%>
     <%= f.text_field :author , class:'input is-success'%>
    </p>

    <p class="field"> 
    <%= f.label :name , class:'label'%> <br/>
     <%= f.text_field :name , class:'input is-success'%>
    </p>

        <p class="field">
    <%= f.label :body , class:'label'%> <br/>
     <%= f.rich_text_area :body, class:"textarea is-large textarea is-focused scrollable" %>
    </p>

<p class="file">
   <label class="file-label">
     <%= f.file_field:image, class:'file-input' %>
    <span class="file-cta">
      <span class="file-icon">
        <i class="fas fa-upload"></i>
      </span>
      <span class="file-label">
        Choose a image
      </span>
    </span>
  </label>
   

    </p>

    <button type="submit" class="button">
    <%# <%= f.submit %> 
    Submit
    </button>
    <% end %>

    </div>

   